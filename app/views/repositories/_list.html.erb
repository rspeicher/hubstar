<% repositories.each do |repo| %>
  <div class="row repo-info">
    <div class="span9">
      <h3><%= link_to(repo.name, repo.link) %></h3>
      <p class="description"><%= repo.description %></p>
    </div>
    <div class="span3">
      <div class="row repo-stats">
        <div class="span1 hubstars hubstarred">
          <%= link_to(number_with_delimiter(repo.stars, delimiter: ','), repository_path(repo)) %>
        </div>
        <div class="span1 watchers">
          <span><%= number_with_delimiter(repo.watchers, delimiter: ',') %></span>
        </div>
        <div class="span1 forks">
          <span><%= number_with_delimiter(repo.forks, delimiter: ',') %></span>
        </div>
      </div>
    </div>
  </div>
<% end %>
